{
  "appId": "com.healthtrixss.pinochlepal",
  "appName": "Pinochle Pal",
  "webDir": "dist/public",
  "server": {
    "androidScheme": "https",
    "iosScheme": "capacitor"
  },
  "ios": {
    "contentInset": "automatic",
    "preferredContentMode": "mobile",
    "limitsNavigationsToAppBoundDomains": true
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#1a2e26",
      "showSpinner": false
    },
    "StatusBar": {
      "style": "dark",
      "backgroundColor": "#1a2e26"
    }
  }
}
